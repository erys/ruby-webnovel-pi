<% content_for :nav do %>
  <%= render 'chapters/nav_top' %>
<% end %>
<div class="container px-2">
  <div class="row mb-2">
    <h1 class="text-center"><%= @book.tl_title %></h1>
    <h2 class="text-muted text-center"><%= @book.og_title %></h2>
    <h2 class="text-muted text-center"><small>By: <%= @book.author.og_name %></small></h2>

    <div class="col-lg-8">
    <p><%= simple_format(@book.description) %></p>
  </div>
    <div class="col-lg-4" style="max-height: 400px">
      <div class="list-group mh-100" style="overflow-y: auto">
        <% @chapters.each_with_index do |chapter, i| %>
          <% classes = "list-group-item border-start list-group-item-action" %>
          <% classes += " rounded-top" if i == 0 %>
          <%= link_to chapter.pretty_title, book_chapter_path(@book, chapter), class: classes %>
        <% end %>
        <div class="clearfix split-items">
          <%= link_to "Add chapter", new_book_chapter_path(@book), class: "list-group-item list-group-item-action list-group-item-info left-side" %>
          <%= link_to "Clean chapter", new_book_corrupt_chapter_path(@book), class: "list-group-item list-group-item-action list-group-item-primary right-side" %>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "All Books", root_path %>
  <%= link_to "Edit", edit_book_path %>
</div>
