<% content_for :nav do %>
  <%= render 'nav_top' %>
<% end %>
<%# TODO: make Ctrl-S do some kind of save %>
  <div class="row justify-content-between align-items-center mb-3">
    <div class="col-auto">
      <h1 class="mt-1">Edit Chapter</h1>
    </div>
    <div class="col-auto align-self-end">
      <div class="btn-toolbar" role="toolbar">
        <% if flash[:last_action] == 'clean' %>
          <div class="btn-group-sm" role=group>
            <%= link_to 'Clean another', new_book_corrupt_chapter_path(@book), {class: 'btn btn-info me-2 text-nowrap'} %>
          </div>
        <% end %>
        <div class="btn-group btn-group-sm" role=group>
          <%= link_to 'Cancel', book_chapter_path(@book, @chapter), {class: 'btn btn-secondary me-2'}%>
        </div>

        <div class="btn-group btn-group-sm" role="group" aria-label="save buttons">
          <input type='submit' name="save" value='Save' class='form-control btn btn-success pe-1' form='chapter_create_edit_form'>
          <input type='submit' name="save" value='& continue' class="form-control btn btn-primary px-1" form='chapter_create_edit_form'>
          <input type='submit' name="save" value="& <%= @next.present? ? 'edit next' : 'clean' %>"
                 class="form-control btn btn-info ps-1" form="chapter_create_edit_form">
        </div>
      </div>
    </div>
  </div>

<%= render 'form', chapter: @chapter, book: @book, local: true %>

